{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ absolute_url(asset('styles/calculator.css')) }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <h1>CALCULATOR</h1>
    <hr>
    <br>
    <form action="{{ path('calculator') }}" method="post">
        <div class="form-group first-number-group">
            <label for="n1">Number 1 </label>
            <input type="number" id="n1" name="n1" step=any>
        </div>
        <div class="form-group operators-group">
            <input type="radio" id="plus" name="calculation_type" value="plus">
            <label for="plus">Plus</label>

            <input type="radio" id="minus" name="calculation_type" value="minus">
            <label for="minus">Minus</label>

            <input type="radio" id="multiplication" name="calculation_type" value="multiplication">
            <label for="multiplication">Multiplication</label>

            <input type="radio" id="division" name="calculation_type" value="division">
            <label for="division">Division</label>
        </div>
        <div class="form-group second-number-group">
            <label for="n2">Number 2 </label>
            <input type="number" id="n2" name="n2" step=any>
        </div>
        <br>
        <input type="submit" class="submit-btn" value="Calculate">
    </form>

    {% if calculation_result %}
        <h3>Calculation result: <strong>{{ calculation_result }}</strong></h3>
    {% endif %}

{% endblock %}